<h1>Listing bcards</h1>

<table>
  <tr>
    <th>Company</th>
    <th>Desc</th>
    <th>Phone</th>
    <th>Website</th>
    <th>City</th>
    <th>State</th>
    <th>Entered by</th>
    <th>Notes</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @bcards.each do |bcard| %>
  <tr>
    <td><%= bcard.company %></td>
    <td><%= bcard.desc %></td>
    <td><%= bcard.phone %></td>
    <td><%= bcard.website %></td>
    <td><%= bcard.city %></td>
    <td><%= bcard.state %></td>
    <td><%= bcard.entered_by %></td>
    <td><%= bcard.notes %></td>
    <td><%= link_to 'Show', bcard %></td>
    <td><%= link_to 'Edit', edit_bcard_path(bcard) %></td>
    <td><%= link_to 'Destroy', bcard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

